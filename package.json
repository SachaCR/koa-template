{
  "name": "koa-template",
  "version": "1.0.0",
  "description": "koa-template API",
  "main": "index.js",
  "nyc": {
    "exclude": [ "**/*.test.js", "lib/middlewares", "lib/db/pool.js" ],
    "reporter": [ "html", "text-summary" ]
  },
  "scripts": {
    "lint": "eslint ./lib ./tests ./config",
    "start": "node index.js",
    "start:docker": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build --force-recreate --abort-on-container-exit",
    "test": "nyc mocha --recursive --reporter=spec './tests/**/*.test.js'",
    "test:local": "NODE_ENV=localtest npm run test",
    "test:docker": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up --build --force-recreate --abort-on-container-exit",
    "test:watch": "watch 'npm run test' lib config tests --wait 5",
    "doc": "apidoc -i lib/ -o apidoc -e apidoc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SachaCR/koa-template.git"
  },
  "keywords": [],
  "author": "SachaCR",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SachaCR/koa-template/issues"
  },
  "homepage": "https://github.com/SachaCR/koa-template#readme",
  "dependencies": {
    "chalk": "^2.4.2",
    "config": "^3.0.1",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^3.0.0",
    "koa-depsi": "^1.0.0",
    "koa-router": "^7.4.0",
    "koa-validator-ajv": "^1.0.0",
    "pg": "^7.8.1",
    "superagent": "^4.1.0",
    "verror": "^1.10.0"
  },
  "devDependencies": {
    "apidoc": "^0.17.7",
    "eslint": "^4.9.0",
    "mocha": "^6.0.2",
    "nyc": "^13.3.0",
    "watch": "^1.0.2"
  }
}
